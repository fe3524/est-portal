                   <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">マイページ</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">
                              <%= current_user.depart %>
                              <%= current_user.position %>
                              <%= current_user.user_name %></li>
                        </ol>
                        <div class="row">
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">新規作成</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <%= link_to "見積書の新規作成", new_mypage_path, class: "small text-white stretched-link" %>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-warning text-white mb-4">
                                    <div class="card-body">検索</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small text-white stretched-link" href="#">見積書の検索</a>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-success text-white mb-4">
                                    <div class="card-body">設定</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <%= link_to '登録情報の編集', edit_user_path(current_user), class: "small text-white stretched-link" %>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-danger text-white mb-4">
                                    <div class="card-body">ログアウト</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <%= link_to "", destroy_user_session_path, method: :delete, class: "small text-white stretched-link" %>
                                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>